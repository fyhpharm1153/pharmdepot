        .calc-btn { @apply flex items-center justify-center text-3xl font-black rounded-xl border-2 border-slate-800 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] h-[70px]; }
        .btn-num { @apply bg-white text-slate-900; }
