<body class="p-3 md:p-6 pb-24">
    <div id="app" class="max-w-7xl mx-auto" v-cloak>
        
        <header class="flex flex-col md:flex-row justify-between items-center mb-8 bg-white p-4 rounded-2xl border-4 border-slate-800 shadow-[5px_5px_0px_0px_rgba(0,0,0,1)] gap-4">
            <h1 class="text-2xl font-black text-slate-800 tracking-tighter">住院藥局智慧撥補</h1>
            <div class="flex items-center gap-2">
                <div class="flex border-2 border-slate-800 rounded-xl overflow-hidden shadow-[2px_2px_0px_0px_rgba(0,0,0,1)]">
                    <button @click="changeFontSize(-0.1)" class="px-4 py-2 bg-white font-black border-r-2 border-slate-800">A-</button>
                    <button @click="changeFontSize(0.1)" class="px-4 py-2 bg-white font-black">A+</button>
                </div>
                <select v-model="currentUser" class="font-black p-2 border-2 border-slate-800 rounded-xl bg-white outline-none">
                    <option v-for="user in staffList" :value="user">{{ user }}</option>
                </select>
                <button @click="showManager = true" class="w-12 h-12 neo-btn bg-slate-800 text-white rounded-xl flex items-center justify-center"><i class="fa-solid fa-cog"></i></button>
            </div>
        </header>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-12">
            <section>
                <div class="neo-card rounded-[2.5rem] p-6 flex flex-col h-full bg-slate-50">
                    <div class="flex justify-between items-center mb-4">
                        <h2 class="text-3xl font-black text-indigo-700 italic">UD Menu</h2>
                        <input v-model="menuSearch" placeholder="搜尋..." class="p-2 border-4 border-slate-800 rounded-xl font-bold outline-none w-32 md:w-48">
                    </div>
                    
                    <div class="flex gap-2 overflow-x-auto pb-4 no-scrollbar mb-2">
                        <button @click="currentGroup = 'ALL'" :class="['category-tab', currentGroup === 'ALL' ? 'active' : 'bg-white']">全部</button>
                        <button v-for="grp in shelfGroups" :key="grp" @click="currentGroup = grp" :class="['category-tab', currentGroup === grp ? 'active' : 'bg-white']">{{ grp }}區</button>
                    </div>
                    
                    <div class="grid grid-cols-1 gap-3 overflow-y-auto max-h-[60vh] pr-2">
                        <div v-for="drug in filteredUDItems" :key="drug.code" 
                             @click="toggleSelect(drug)"
                             :class="['drug-card', isSelected(drug) ? 'selected' : '']">
                            <div class="flex justify-between items-center">
                                <span class="shelf-badge">{{ drug.shelf }}</span>
                                <span class="text-[0.6em] font-bold text-slate-400">{{ drug.code }}</span>
                            </div>
                            <h3 class="name-text">{{ drug.name }}</h3>
                        </div>
                    </div>

                    <button @click="openReviewModal" :disabled="selectedDrugs.length === 0"
                            class="w-full mt-6 py-8 neo-btn bg-indigo-600 text-white rounded-[2rem] font-black text-3xl disabled:opacity-40 tracking-widest">
                        送出請求 ({{ selectedDrugs.length }})
                    </button>
                </div>
            </section>

            <section class="space-y-8">
                <div class="neo-card rounded-[2.5rem] p-6 bg-amber-50 min-h-[500px] flex flex-col">
                    <h2 class="text-2xl font-black mb-8 flex items-center gap-3 text-slate-800">
                        <i class="fa-solid fa-truck-loading text-orange-600"></i>待辦撥補
                    </h2>
                    <div v-if="sortedPendingOrders.length === 0" class="flex-1 flex flex-col items-center justify-center text-slate-300 font-bold italic">
                        <i class="fa-solid fa-check-double text-6xl mb-4 opacity-10"></i>目前無待撥項目
                    </div>
                    <div class="space-y-5 overflow-y-auto max-h-[60vh] pr-1">
                        <div v-for="order in sortedPendingOrders" :key="order.id" 
                             class="bg-white border-4 border-slate-800 rounded-3xl p-5 shadow-[6px_6px_0px_0px_rgba(0,0,0,1)] flex justify-between items-center">
                            <div class="flex-1">
                                <div class="flex items-center gap-3 mb-2">
                                    <span class="bg-blue-600 text-white px-3 py-1 rounded-lg text-lg font-black border-2 border-slate-800">{{ getWarehouseShelf(order.code) }}</span>
                                    <span class="text-sm font-bold text-slate-400">{{ order.requester }} 申請</span>
                                </div>
                                <p class="font-black text-2xl text-slate-800 leading-tight">{{ order.name }}</p>
                            </div>
                            <button @click="openActionModal(order, 'process')" class="ml-4 neo-btn bg-orange-400 text-white px-8 py-5 rounded-2xl font-black text-2xl">處理</button>
                        </div>
                    </div>
                </div>
            </section>
        </div>

        <section class="space-y-6">
            <div class="bg-white p-5 rounded-2xl border-4 border-slate-800 shadow-lg flex flex-col md:flex-row justify-between items-center gap-4">
                <h3 class="font-black text-2xl text-indigo-900 italic">Today's UD Completed</h3>
                <input type="date" v-model="filterDate" class="p-3 border-4 border-slate-800 rounded-xl font-black text-lg bg-slate-50 outline-none">
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div v-for="log in todayUDLogs" :key="log.id" class="record-card shadow-[4px_4px_0px_0px_rgba(0,0,0,0.05)]">
                    <div class="flex-1">
                        <div class="text-[0.8em] font-bold text-slate-400 flex items-center gap-2">
                            <span class="bg-indigo-600 text-white px-2 py-0.5 rounded font-black">{{ log.user }}</span>
                            <span>{{ log.time.split(' ')[1] }}</span>
                        </div>
                        <p class="font-black text-slate-800 text-xl leading-tight mt-1">[{{ log.code }}] {{ log.name }}</p>
                    </div>
                    <div class="flex items-center gap-3">
                        <div @click="openActionModal(log, 'edit')" 
                             class="bg-blue-600 text-white font-black px-5 py-3 rounded-xl text-3xl min-w-[90px] text-center border-4 border-slate-800 cursor-pointer shadow-[3px_3px_0px_0px_rgba(0,0,0,1)] active:translate-y-1">
                            {{ log.qty }}
                        </div>
                        <button @click="deleteLog(log)" class="bg-red-100 text-red-600 w-14 h-14 rounded-xl flex items-center justify-center border-2 border-red-200 hover:bg-red-300 transition-colors">
                            <i class="fa-solid fa-trash-can text-2xl"></i>
                        </button>
                    </div>
                </div>
            </div>
        </section>

        <div v-if="showReview" class="modal-overlay">
            <div class="bg-white w-full max-w-2xl rounded-[3.5rem] p-8 border-8 border-slate-800 shadow-2xl flex flex-col max-h-[90vh]">
                <h2 class="text-3xl font-black text-slate-800 mb-6 text-center">核對點單品項</h2>
                <div class="flex-1 overflow-y-auto space-y-3 mb-8 pr-2">
                    <div v-for="d in selectedDrugs" :key="d.code" class="bg-slate-50 border-4 border-slate-800 rounded-2xl p-4 flex justify-between items-center shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]">
                        <div>
                            <span class="bg-yellow-400 text-slate-900 px-2 py-0.5 rounded font-black border-2 border-slate-800 text-xs">{{ d.shelf }}</span>
                            <p class="text-xl font-black text-slate-800 mt-1">{{ d.name }}</p>
                        </div>
                        <button @click="toggleSelect(d)" class="text-red-500 p-2"><i class="fa-solid fa-times-circle text-2xl"></i></button>
                    </div>
                </div>
                <div class="grid grid-cols-2 gap-4">
                    <button @click="showReview = false" class="py-5 bg-slate-200 text-slate-600 rounded-3xl font-black border-4 border-slate-400 text-xl">返回修改</button>
                    <button @click="finalSubmitOrder" class="py-5 bg-indigo-600 text-white rounded-3xl font-black border-4 border-slate-800 text-2xl shadow-[6px_6px_0px_0px_rgba(0,0,0,1)] active:scale-95">確認發送</button>
                </div>
            </div>
        </div>

        <div v-if="activeEntry" class="modal-overlay">
            <div class="bg-white w-full max-w-md rounded-[3rem] p-8 border-8 border-slate-800 shadow-2xl animate-in zoom-in duration-150">
                <div class="flex justify-between items-start mb-6 border-b-4 border-slate-100 pb-4">
                    <div class="flex-1">
                        <h2 class="font-black text-2xl text-blue-700">{{ editMode === 'process' ? '撥補發藥處理' : '修改發藥數量' }}</h2>
                        <div class="flex items-center gap-3 mt-3">
                            <span class="bg-blue-600 text-white text-lg px-3 py-1 rounded-lg font-black border-2 border-slate-800">{{ getWarehouseShelf(activeEntry.code) }}</span>
                            <p class="font-black text-slate-700 text-xl leading-tight">{{ activeEntry.name }}</p>
                        </div>
                    </div>
                    <button @click="activeEntry = null" class="text-5xl font-black text-slate-300 hover:text-red-500">&times;</button>
                </div>
                
                <div class="bg-slate-100 p-6 rounded-[2rem] border-4 border-slate-800 mb-6 text-right text-6xl font-black shadow-inner min-h-[1.5em] text-slate-900">{{ entryQtyStr || '0' }}</div>

                <div class="grid grid-cols-4 gap-3 mb-8">
                    <button @click="handleCalc('AC')" class="calc-btn btn-ac text-2xl">AC</button>
                    <button @click="handleCalc('DEL')" class="calc-btn btn-del text-2xl"><i class="fa-solid fa-backspace"></i></button>
                    <button @click="handleCalc('/')" class="calc-btn btn-op">÷</button>
                    <button @click="handleCalc('*')" class="calc-btn btn-op">×</button>
                    <button v-for="n in ['7','8','9']" @click="handleCalc(n)" class="calc-btn btn-num">{{ n }}</button>
                    <button @click="handleCalc('-')" class="calc-btn btn-op">-</button>
                    <button v-for="n in ['4','5','6']" @click="handleCalc(n)" class="calc-btn btn-num">{{ n }}</button>
                    <button @click="handleCalc('+')" class="calc-btn btn-op">+</button>
                    <button v-for="n in ['1','2','3']" @click="handleCalc(n)" class="calc-btn btn-num">{{ n }}</button>
                    <button @click="doCalculation" class="calc-btn btn-equal row-span-2 text-5xl">=</button>
                    <button @click="handleCalc('0')" class="calc-btn btn-num col-span-2">0</button>
                    <button @click="handleCalc('.')" class="calc-btn btn-num">.</button>
                </div>

                <div class="grid grid-cols-2 gap-4">
                    <button @click="submitAsZero" class="py-5 bg-slate-200 text-slate-600 rounded-2xl font-black border-4 border-slate-400 text-xl" :disabled="isSaving">不領(0)</button>
                    <button @click="submitFinalAction" class="py-5 bg-emerald-600 text-white rounded-2xl font-black border-4 border-slate-800 shadow-[5px_5px_0px_0px_rgba(0,0,0,1)] text-2xl active:translate-y-1" :disabled="isSaving">
                        <span v-if="!isSaving">確認發藥</span>
                        <i v-else class="fa-solid fa-spinner animate-spin"></i>
                    </button>
                </div>
            </div>
        </div>

    </div>

<script type="module">
    import { createApp, ref, computed, onMounted } from "https://unpkg.com/vue@3/dist/vue.esm-browser.js";
    import { initializeApp } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-app.js";
    import { getDatabase, ref as dbRef, push, onValue, remove, set, get, update } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-database.js";

    const firebaseConfig = {
      apiKey: "AIzaSyDZuNztwb9aLG1RqeDOyrj6KJrPhwBFi9M",
      authDomain: "fyh-pharmacy-inventory.firebaseapp.com",
      databaseURL: "https://fyh-pharmacy-inventory-default-rtdb.asia-southeast1.firebasedatabase.app",
      projectId: "fyh-pharmacy-inventory",
      storageBucket: "fyh-pharmacy-inventory.firebasestorage.app",
      messagingSenderId: "751378148626",
      appId: "1:751378148626:web:5a2d2be1c5f905657457cb"
    };

    const fbApp = initializeApp(firebaseConfig);
    const db = getDatabase(fbApp);

    createApp({
        setup() {
            const currentUser = ref(localStorage.getItem('preferred_user') || '值班人員');
            const staffList = ref(['值班人員']);
            const inventory = ref([]);
            const warehouse = ref([]);
            const menuSearch = ref('');
            const currentGroup = ref('ALL'); // 當前選擇的分區
            const selectedDrugs = ref([]);
            const pendingOrders = ref([]);
            const transferLogs = ref([]);
            const filterDate = ref(new Date().toISOString().split('T')[0]);
            
            const showReview = ref(false); 
            const activeEntry = ref(null); 
            const editMode = ref('process'); 
            const entryQtyStr = ref('');
            const isSaving = ref(false);
            const baseFontSize = ref(parseFloat(localStorage.getItem('preferred_font_size')) || 1.1);

            onMounted(() => {
                applyFontSize();
                onValue(dbRef(db, "inventory"), s => { inventory.value = s.val() ? Object.values(s.val()).filter(i => i.zone === 'UD') : []; });
                onValue(dbRef(db, "warehouse"), s => { warehouse.value = s.val() ? Object.values(s.val()) : []; });
                onValue(dbRef(db, "replenishment_orders"), s => {
                    pendingOrders.value = s.val() ? Object.entries(s.val()).map(([id, v]) => ({ id, ...v })) : [];
                });
                onValue(dbRef(db, "transfer_logs"), s => {
                    transferLogs.value = s.val() ? Object.entries(s.val()).map(([id, v]) => ({ id, ...v })).reverse() : [];
                });
                onValue(dbRef(db, "staff_list"), s => { if(s.val()) staffList.value = s.val(); });
            });

            const applyFontSize = () => { document.documentElement.style.fontSize = `${baseFontSize.value}rem`; };
            const changeFontSize = (delta) => {
                baseFontSize.value = Math.min(Math.max(baseFontSize.value + delta, 0.8), 2.2);
                applyFontSize();
                localStorage.setItem('preferred_font_size', baseFontSize.value);
            };

            const getWarehouseShelf = (code) => {
                const d = warehouse.value.find(w => w.c === code);
                return d ? (d.s || '??') : '無';
            };

            // 自動取得分組列表 (A, B, C...)
            const shelfGroups = computed(() => {
                const groups = new Set();
                inventory.value.forEach(i => {
                    if (i.shelf) {
                        const firstChar = i.shelf.charAt(0).toUpperCase();
                        if (/[A-Z]/.test(firstChar)) groups.add(firstChar);
                        else groups.add("其他");
                    }
                });
                return Array.from(groups).sort();
            });

            const filteredUDItems = computed(() => {
                let list = [...inventory.value];
                if (currentGroup.value !== 'ALL') {
                    list = list.filter(i => i.shelf && (i.shelf.charAt(0).toUpperCase() === currentGroup.value || (currentGroup.value === '其他' && !/[A-Z]/.test(i.shelf.charAt(0)))));
                }
                if (menuSearch.value) {
                    const k = menuSearch.value.toLowerCase();
                    list = list.filter(i => i.name.toLowerCase().includes(k) || i.code.toLowerCase().includes(k));
                }
                return list.sort((a, b) => a.shelf.localeCompare(b.shelf, 'zh-Hant'));
            });

            const sortedPendingOrders = computed(() => {
                return [...pendingOrders.value].sort((a, b) => {
                    return getWarehouseShelf(a.code).localeCompare(getWarehouseShelf(b.code), 'zh-Hant');
                });
            });

            const todayUDLogs = computed(() => {
                const target = filterDate.value.replace(/-/g, '/');
                return transferLogs.value.filter(l => {
                    const logDate = l.time.split(' ')[0].split('/').map(n => parseInt(n)).join('/');
                    const filterDateParsed = target.split('/').map(n => parseInt(n)).join('/');
                    return logDate === filterDateParsed && (l.user.startsWith('UD') || l.type === 'UD點單');
                });
            });

            const toggleSelect = (d) => {
                const idx = selectedDrugs.value.findIndex(i => i.code === d.code);
                if (idx > -1) selectedDrugs.value.splice(idx, 1); else selectedDrugs.value.push(d);
            };
            const isSelected = (d) => selectedDrugs.value.some(i => i.code === d.code);

            const openReviewModal = () => { showReview.value = true; };
            const finalSubmitOrder = async () => {
                for (const d of selectedDrugs.value) {
                    await push(dbRef(db, "replenishment_orders"), {
                        code: d.code, name: d.name, shelf: d.shelf, requester: currentUser.value, time: new Date().toLocaleString('zh-TW', { hour12: false })
                    });
                }
                selectedDrugs.value = []; showReview.value = false; alert("請求已送出！");
            };

            const openActionModal = (item, mode) => {
                activeEntry.value = { ...item };
                editMode.value = mode;
                entryQtyStr.value = mode === 'edit' ? item.qty.toString() : '';
            };

            const handleCalc = (v) => {
                if (v === 'AC') entryQtyStr.value = '';
                else if (v === 'DEL') entryQtyStr.value = entryQtyStr.value.slice(0, -1);
                else entryQtyStr.value += v;
            };

            const doCalculation = () => {
                if (!entryQtyStr.value) return;
                try { entryQtyStr.value = (Math.round(eval(entryQtyStr.value.replace(/[^0-9+\-*/().]/g, '')) * 100) / 100).toString(); } catch { entryQtyStr.value = '0'; }
            };

            // [發藥確認核心邏輯]
            const submitFinalAction = async () => {
                if (!activeEntry.value || isSaving.value) return;
                isSaving.value = true;
                doCalculation();
                const q = Number(entryQtyStr.value) || 0;
                
                try {
                    if (editMode.value === 'process') {
                        // 1. 寫入正式完成紀錄 (重要：標記為 UD點單)
                        const logData = {
                            time: new Date().toLocaleString('zh-TW', { hour12: false }),
                            user: `UD(${currentUser.value})`, 
                            code: activeEntry.value.code, name: activeEntry.value.name, shelf: activeEntry.value.shelf,
                            qty: q, processed: true, type: 'UD點單'
                        };
                        await push(dbRef(db, "transfer_logs"), logData);
                        
                        // 2. 移除待辦項目
                        const taskRef = dbRef(db, `replenishment_orders/${activeEntry.value.id}`);
                        await remove(taskRef);
                    } else {
                        // 3. 修改舊紀錄
                        const updateRef = dbRef(db, `transfer_logs/${activeEntry.value.id}`);
                        await update(updateRef, { qty: q });
                    }
                    activeEntry.value = null; // 關閉視窗
                } catch (e) {
                    alert("存檔失敗，請確認網路狀態");
                } finally {
                    isSaving.value = false;
                }
            };

            const submitAsZero = () => { entryQtyStr.value = '0'; submitFinalAction(); };
            const deleteLog = async (log) => { if (confirm("確定刪除此筆紀錄？")) await remove(dbRef(db, `transfer_logs/${log.id}`)); };

            return {
                currentUser, staffList, menuSearch, currentGroup, shelfGroups, filteredUDItems, sortedPendingOrders, todayUDLogs, selectedDrugs, showReview, activeEntry, entryQtyStr, editMode, isSaving, filterDate,
                toggleSelect, isSelected, openReviewModal, finalSubmitOrder, openActionModal, handleCalc, submitFinalAction, submitAsZero, deleteLog, doCalculation, getWarehouseShelf, changeFontSize,
                nfcShelfId: new URLSearchParams(window.location.search).get('s')
            };
        }
    }).mount('#app');
</script>
</body>
</html>
