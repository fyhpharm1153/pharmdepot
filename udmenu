        .btn-equal { @apply bg-blue-600 text-white; }

        .drug-card { @apply cursor-pointer border-4 border-slate-800 rounded-[1.5rem] p-4 flex flex-col bg-white transition-all shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]; }
