        .name-text { @apply text-2xl font-black text-slate-800 leading-tight mt-3; }

        .modal-overlay { @apply fixed inset-0 z-[200] flex items-center justify-center p-4 bg-slate-900/80 backdrop-blur-md; }
        .record-card { border-left: 10px solid #4f46e5; @apply bg-white p-4 rounded-xl shadow border-2 border-slate-300 flex items-center gap-4; }
        
        /* 分類標籤樣式 */
        .category-tab { @apply px-5 py-2 border-2 border-slate-800 rounded-xl font-black text-sm transition-all whitespace-nowrap; }
        .category-tab.active { @apply bg-indigo-600 text-white shadow-[2px_2px_0px_0px_rgba(0,0,0,1)]; }
